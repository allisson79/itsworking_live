
entrypoint = "index.html"
modules = ["web"]

[nix]
channel = "stable-24_11"
packages = ["static-web-server"]

[deployment]
publicDir = "."
deploymentTarget = "static"

[workflows]
runButton = "Serve Website"

[[workflows.workflow]]
name = "Serve static"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Starting static web server...\""
waitForPort = 5000

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "static-web-server -p 5000 -d ."

[[workflows.workflow]]
name = "Serve Website"
author = 43468941
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "static-web-server -p 5000 -d ."

[[ports]]
localPort = 80
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000
