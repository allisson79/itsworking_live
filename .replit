
entrypoint = "index.html"
modules = ["web", "python-3.11"]

[nix]
channel = "stable-24_11"

[deployment]
publicDir = "."
deploymentTarget = "autoscale"
run = ["python", "-m", "http.server", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Server"

[[workflows.workflow]]
name = "Web Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port app:app"
waitForPort = 5000

[[ports]]
localPort = 80
externalPort = 80

[agent]
expertMode = true
integrations = ["python_openai_ai_integrations:1.0.0"]
